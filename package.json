{
    "name": "lnreader-plugins",
    "version": "3.0.0",
    "description": "Plugins repo for LNReader",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "concurrently \"npm run dev\" \"npm run proxy\"",
        "dev": "vite",
        "build": "vite build",
        "proxy": "node proxy_server.js",
        "test": "exit 0",
        "json": "tsc && node ./.js/scripts/json_plugins.js",
        "generate": "ts-node ./scripts/multisrc/generate.ts",
        "clearMultisrc": "find . -type f -wholename \"*plugins*\\[*\\]*.[t,j]s\" -delete",
        "less": "npx less ./test_web/static/css/index.less ./test_web/static/css/index.css",
        "host-linux": "chmod +x ./host.sh && ./host.sh",
        "host-windows": "powershell ./host.ps1",
        "prettier": "prettier --write \"./**/*.{js,ts}\"",
        "prepare": "husky install",
        "icons": "npm run clearMultisrc && npm run generate && npm run json && ts-node ./scripts/icon_reloading.ts"
    },
    "author": "LNReader",
    "license": "MIT",
    "dependencies": {
        "cheerio": "^1.0.0-rc.12",
        "dayjs": "^1.11.10",
        "htmlparser2": "^9.1.0",
        "protobufjs": "^7.2.6",
        "qs": "^6.11.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sanitize-html": "^2.12.1",
        "urlencode": "^2.0.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.66",
        "@types/react-dom": "^18.2.22",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "concurrently": "^8.2.2",
        "cors-anywhere": "^0.4.4",
        "husky": "^9.0.11",
        "image-size": "^1.1.1",
        "lint-staged": "^15.2.2",
        "prettier": "3.2.5",
        "terser": "^5.31.1",
        "vite": "^5.2.0"
    },
    "lint-staged": {
        "**/*.{js,ts}": "prettier --write"
    }
}